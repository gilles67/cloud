acl "internal" {
    2a0e:e701:1123::/48;
};

options {
    directory "/var/cache/bind";
    dnssec-validation auto;
    auth-nxdomain no;
    listen-on { any; };
    listen-on-v6 { any; };

    querylog yes;

    forwarders {
{% for forwarder in features.domain.recursive.forwarders %}
        {{ forwarder }};
{% endfor %}
    };

    allow-query { internal; };
    allow-recursion { internal; };
    allow-transfer { "none"; };

{% if features.domain.nat64 is defined %}
    dns64 {{ features.domain.nat64.prefix }} {
        clients { internal; };
    };
{% endif %}
};